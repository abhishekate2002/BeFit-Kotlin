<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="cardEat">
        <item name="android:layout_width">371dp</item>
        <item name="android:layout_height">121dp</item>
    </style>

    <style name="cardDes" parent="cardEat">
        <item name="android:layout_width">371dp</item>
        <item name="android:layout_height">121dp</item>
    </style>

    <style name="incardtext">
        <item name="android:layout_width">193dp</item>
        <item name="android:layout_height">116dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="footerText" parent="heading">
        <item name="android:layout_width">386dp</item>
        <item name="android:layout_height">231dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subheading" parent="heading">
        <item name="android:layout_width">379dp</item>
        <item name="android:layout_height">79dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="workoutname" parent="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="points">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>